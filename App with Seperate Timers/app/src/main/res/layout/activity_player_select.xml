<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".playerSelect">

    <Button
        android:id="@+id/startGrid"
        style="@style/start_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kvnvj1714679111_removebg_preview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            style="@style/select_icon2"
            android:layout_width="214dp"
            android:layout_height="112dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/texticon"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:backgroundTint="#FC5F57"
                android:fontFamily="sans-serif-black"
                android:text="@string/player"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3"
            android:layout_width="200dp"
            android:layout_height="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="82dp"
            android:background="#FC5F57"
            android:elevation="10dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/cl2"
            app:layout_constraintEnd_toEndOf="@id/t2"
            app:layout_constraintStart_toStartOf="@+id/t2"
            app:layout_constraintTop_toTopOf="@+id/cl2">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl4"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="82dp"
            android:background="#3D4175"
            android:elevation="10dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/cl2"
            app:layout_constraintEnd_toEndOf="@+id/t2"
            app:layout_constraintStart_toStartOf="@+id/t2"
            app:layout_constraintTop_toTopOf="@+id/cl2">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="20dp"
            android:fontFamily="@font/koho_bold"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="2"
            android:textColor="#FC5F57"
            android:textSize="90sp"
            app:layout_constraintBottom_toBottomOf="@+id/cl2"
            app:layout_constraintEnd_toEndOf="@+id/cl2"
            app:layout_constraintStart_toStartOf="@id/cl2" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/koho_bold"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:shadowColor="#1B1C33"
            android:shadowDx="6"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="2"
            android:textColor="#3D4175"
            android:textSize="105sp"
            app:layout_constraintBottom_toBottomOf="@+id/t1"
            app:layout_constraintEnd_toEndOf="@+id/cl2"
            app:layout_constraintStart_toStartOf="@id/cl2"
            app:layout_constraintTop_toTopOf="@+id/t1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            style="@style/select_icon2"
            android:layout_width="214dp"
            android:layout_height="112dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/texticon"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/evenLigherBlue"
                android:fontFamily="sans-serif-black"
                android:text="@string/player"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="200dp"
            android:layout_height="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="82dp"
            android:background="@color/evenLigherBlue"
            android:elevation="10dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout7"
            app:layout_constraintEnd_toEndOf="@id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout7">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="82dp"
            android:background="#3D4175"
            android:elevation="10dp"
            android:padding="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout7"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout7">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:elevation="20dp"
            android:fontFamily="@font/koho_bold"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="1"
            android:textColor="@color/evenLigherBlue"
            android:textSize="90sp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout7"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
            app:layout_constraintStart_toStartOf="@id/constraintLayout7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:fontFamily="@font/koho_bold"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:shadowColor="#1B1C33"
            android:shadowDx="6"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="1"
            android:textColor="#3D4175"
            android:textSize="105sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
            app:layout_constraintStart_toStartOf="@id/constraintLayout7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editTextText2"
        style="@style/select_icon"
        android:layout_marginEnd="4dp"
        android:drawableTint="@color/evenLigherBlue"
        android:hint="Enter Player-1 Name"
        android:maxLength="14"
        android:scaleX=".8"
        android:scaleY=".8"
        android:text="@string/empty"
        android:textColor="@color/evenLigherBlue"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout9"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/name_bar2"
        android:backgroundTint="#3D4175"
        android:fontFamily="@font/alata"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="PLAYER INFORMATION"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        style="@style/editButtonText"
        android:layout_width="214dp"
        android:layout_height="112dp"
        android:background="@drawable/texticon"
        android:drawableTint="#FD5F57"
        android:elevation="10dp"
        android:hint="Enter Player-2 Name"
        android:maxLength="14"
        android:padding="8dp"
        android:scaleX=".8"
        android:scaleY=".8"
        android:text="@string/empty"
        android:textColor="@color/lightred"
        app:layout_constraintBottom_toBottomOf="@+id/cl1"
        app:layout_constraintEnd_toEndOf="@+id/editTextText2" />

</androidx.constraintlayout.widget.ConstraintLayout>